<h1>My Wikis</h1>

<div class="container">
    
    <table class="table table-striped table-bordered">
        <% @wikis.each do |wiki| %>
          <tr>
            <td><%= link_to wiki.title, wiki %></td>
            <td><%= link_to "Edit", edit_wiki_path(wiki) %></td>
            <td><%= link_to "Remove", wiki, method: :delete, data: { confirm: "Are you sure?" } %></td>
          </tr>
        <% end %>
    </table>
    <br>
    <%= link_to "New Wiki", new_wiki_path, :class => 'btn btn-default btn-lg' %>
</div>