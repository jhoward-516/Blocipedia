<h1>Edit Wiki</h1>
<div class="container">
  <div class="row">
    <div class="col-md-3">
     <p>Guidelines for Wikis</p>
     <ul>
       <li>Guideline 1.</li>
       <li>Guideline 2.</li>
       <li>Guideline 3</li>
     </ul>
    </div>
    <div class="col-md-9">
     <%= render partial: 'form', locals: { wiki: @wiki } %>
    </div>
  </div>
  <% if (@wiki.user == current_user || current_user.admin?) && @wiki.private? %>
  <div class="row">
      <div class="col-md-6 col-md-offset-3">
      <%= form_tag [@wiki, Collaborator.new] do %>
          <%= text_field_tag :email, nil, placeholder: "Enter email address" %>
          <%= submit_tag "Add Collaborator" %>
      <% end %>
      </div>
  </div>
  <% end %>
</div>
