<!DOCTYPE html>
<html>
<head>
  <title>Blocipedia</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header navbar-right">
        <% if user_signed_in? %>
          <p class ="navbar-text">Signed in as: <strong><%= current_user.email %> <%=current_user.role %> account</strong>
          <%= link_to 'Profile', edit_user_registration_path, :class => 'btn btn-default navbar-btn' %>
          <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'btn btn-default navbar-btn'  %>
          </p>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, :class => 'btn btn-default navbar-btn'  %>
        <% end %>
      </div>
    </div>
  </nav>
  <div class="container-fluid"> 
    
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:notice] %>
      </div>
    <% elsif flash.now[:alert] %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash.now[:alert] %>
      </div>
    <% elsif flash[:alert] %>
      <div class="alert alert-warning">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= flash[:alert] %>
      </div>
    <% end %>
    
    <%= yield %>
  </div>
</body>
</html>
